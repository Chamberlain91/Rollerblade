{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "esModuleInterop": true,
        "outDir": "out/",
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "pretty": true,
        "lib": [
            "DOM",
            "ESNext"
        ]
    },
    "include": [
        "src/**/*"
    ]
}